<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
    <property name="connection.driver_class"> 
	 com.mysql.jdbc.Driver
    </property>
    <property name="connection.url">
        jdbc:mysql://localhost/qwerty
    </property>
    <property name="connection.username">root</property>
    <property name="connection.password">school24</property>
    <property name="connection.pool_size">10</property>
    <property name="show_sql">true</property>
    <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="useUnicode">true</property>
    <!-- Mapping files -->
    <mapping class="p1.models.Hall"/>
    <mapping class="p1.models.UrlOfFilm"/>
    <mapping class="p1.models.Films"/>
    <mapping class="p1.models.Premiere"/>
    <mapping class="p1.models.Actors"/>
    <mapping class="p1.models.Genre"/>
    <mapping class="p1.models.Student"/>

</session-factory>
</hibernate-configuration>
